# ================== KAFKA ==================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_ZOOKEEPER_CONNECT=localhost:2181
KAFKA_AUTO_CREATE_TOPICS=true
KAFKA_NUM_PARTITIONS=3
KAFKA_REPLICATION_FACTOR=1

# Kafka Topics
KAFKA_TOPIC_TRANSACTIONS=transactions-topic
KAFKA_TOPIC_CART_EVENTS=cart-events-topic
KAFKA_TOPIC_PRODUCT_VIEWS=product-views-topic

# ================== SPARK ==================
SPARK_MASTER_URL=local[*]
SPARK_APP_NAME=GlobalMart
SPARK_DRIVER_MEMORY=2g
SPARK_EXECUTOR_MEMORY=2g
SPARK_EXECUTOR_CORES=2
SPARK_LOG_LEVEL=WARN

# Spark Streaming
SPARK_STREAMING_BATCH_INTERVAL=10
SPARK_CHECKPOINT_DIR=./data/checkpoints

